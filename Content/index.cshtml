@{
    List<Dictionary<string, object>> allPosts = Model.Get<List<Dictionary<string, object>>>("AllPosts").OrderByDescending(x => (DateTime)x["DateTimePublished"]).Take(2).ToList();
}

<div
  class="absolute left-0 -z-10 w-screen overflow-x-clip md:relative md:w-full md:overflow-x-visible"
>
  <div
    class="right-0 bg-blue-400/30 dark:bg-blue-600/30 absolute h-72 w-72 rounded-full blur-3xl"
  ></div>
  <div
    class="right-36 top-28 bg-purple-400/30 dark:bg-purple-600/30 absolute h-72 w-72 rounded-full blur-3xl"
  ></div>
</div>
